{
  "compilerOptions": {
    /* Output + incremental build info */
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    /* Language + library settings */
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* Module system for modern bundlers like Vite */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",

    /* Compiler safety / lint-like checks */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* JSX + JS support */
    "jsx": "react-jsx",
    "allowJs": true,

    /* Paths alias for shadcn & cleaner imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Do not emit files; rely on bundler */
    "noEmit": true
  },
  "include": ["src"]
}
